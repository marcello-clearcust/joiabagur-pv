### Activate Point of Sale
@posId = replace-with-actual-id
PATCH {{baseUrl}}/point-of-sales/{{posId}}/status
Content-Type: {{contentType}}

{
  "isActive": true
}

### Deactivate Point of Sale
@posId = replace-with-actual-id
PATCH {{baseUrl}}/point-of-sales/{{posId}}/status
Content-Type: {{contentType}}

{
  "isActive": false
}

### Assign Operator to Point of Sale
@posId = replace-with-actual-id
@userId = replace-with-operator-id
POST {{baseUrl}}/point-of-sales/{{posId}}/operators/{{userId}}

### Unassign Operator from Point of Sale
@posId = replace-with-actual-id
@userId = replace-with-operator-id
DELETE {{baseUrl}}/point-of-sales/{{posId}}/operators/{{userId}}

### Get Payment Methods for Point of Sale
@posId = replace-with-actual-id
GET {{baseUrl}}/point-of-sales/{{posId}}/payment-methods

### Assign Payment Method to Point of Sale
@posId = replace-with-actual-id
@paymentMethodId = replace-with-method-id
POST {{baseUrl}}/point-of-sales/{{posId}}/payment-methods/{{paymentMethodId}}

### Unassign Payment Method from Point of Sale
@posId = replace-with-actual-id
@paymentMethodId = replace-with-method-id
DELETE {{baseUrl}}/point-of-sales/{{posId}}/payment-methods/{{paymentMethodId}}

### Change Payment Method Assignment Status
@posId = replace-with-actual-id
@paymentMethodId = replace-with-method-id
PATCH {{baseUrl}}/point-of-sales/{{posId}}/payment-methods/{{paymentMethodId}}/status
Content-Type: {{contentType}}

{
  "isActive": false
}
